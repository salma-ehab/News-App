<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.destinations.ItemDetailsFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/articleTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        android:text="Unemployment rate reaches 2-year high of 6.9% in October, shows CMIE data: key things to know"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#e6ecec"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="14dp"/>
    <TextView
        android:id="@+id/date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/articleTitle2"
        android:text="Date and time"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#6b706c"
        android:background="#e6ecec"
        android:paddingLeft="10dp"
        android:paddingBottom="1dp"/>
    <TextView
        android:id="@+id/website2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Website"
        android:textStyle="bold"
        android:textColor="#6b706c"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/date_time"
        android:background="#e6ecec"
        android:paddingBottom="10dp"/>

    <Button
        android:id="@+id/readFull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Read Full Story"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="12dp"
        android:textColor="#FFFFFF"
        android:background="#3f413e" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toTopOf="@id/readFull"
        app:layout_constraintTop_toBottomOf="@id/website2"
        android:textSize="18sp"
        android:textColor="#5d6160"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Here will be the Article ..."/>

    <ImageView
        android:id="@+id/share_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_share_24"
        app:layout_constraintTop_toBottomOf="@id/articleTitle2"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingRight="20dp"
        android:paddingTop="5dp"/>

    <ImageView
        android:id="@+id/bookmark_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_bookmark_border_24"
        app:layout_constraintTop_toBottomOf="@id/articleTitle2"
        app:layout_constraintEnd_toEndOf="@id/share_icon"
        android:paddingRight="60dp"
        android:paddingTop="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>